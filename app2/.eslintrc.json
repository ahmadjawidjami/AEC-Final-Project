{
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "rules": {
        "strict": 0,
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "keyword-spacing": ["error", { "before": true }],
        "object-curly-spacing": ["error", "always", { "objectsInObjects": true }],
        "space-in-parens": ["error", "never"],
        "no-console": 0,
        "meteor/template-names": [2, "snake-case"],
        "indent": [2, 4]
    }
}